@model TechConnect.DtoUI.ColorDtos.GetByIdColorDto
@{
    ViewData["Title"] = "UpdateColor";
    Layout = "~/Views/Layout/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <strong>Renk</strong>  Güncelle
        </div>
        <div class="card-body card-block">
            <form method="post" enctype="multipart/form-data" class="form-horizontal">
                <input type="hidden" asp-for="ID" />
                <input type="hidden" asp-for="Status" />
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="text-input" class=" form-control-label">Renk Adı</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input type="text" id="text-input" asp-for="ColorName" placeholder="Renk giriniz..." class="form-control">
                    </div>
                </div>

                <br /><br />
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-dot-circle-o"></i> Güncelle
                </button>

            </form>
        </div>
    </div>
</div>
