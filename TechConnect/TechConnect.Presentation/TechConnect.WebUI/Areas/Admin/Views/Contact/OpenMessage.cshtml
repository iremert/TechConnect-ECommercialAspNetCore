@model TechConnect.DtoUI.ContactDtos.GetByIdContactDto
@{
    ViewData["Title"] = "OpenMessage";
    Layout = "~/Views/Layout/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <strong>Mesajın</strong>  İçeriği
        </div>
        <div class="card-body card-block">

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="text-input" class=" form-control-label">Adı</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input type="text" id="text-input" asp-for="Name" placeholder="Adını giriniz..." class="form-control">
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="text-input" class=" form-control-label">Emaili</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input type="text" id="text-input" asp-for="Email" placeholder="Emailini giriniz..." class="form-control">
                    </div>
                </div>


            <div class="row form-group">
                <div class="col col-md-3">
                    <label for="textarea-input" class=" form-control-label">Mesaj</label>
                </div>
                <div class="col-12 col-md-9">
                    <textarea asp-for="Message" id="textarea-input" rows="9" placeholder="Mesajınız..." class="form-control"></textarea>
                </div>
            </div>
                <br /><br />
                <a href="/Admin/Contact/Index/" class="btn btn-primary btn-sm">
                    <i class="fa fa-dot-circle-o"></i> Geri Dön
                </a>

        </div>
    </div>
</div>


