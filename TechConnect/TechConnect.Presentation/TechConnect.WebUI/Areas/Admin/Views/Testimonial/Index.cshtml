@model List<TechConnect.DtoUI.TestimonialDtos.ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/_AdminLayout.cshtml";
    int sayaç = 0;
}

<div class="row">
    <div class="col-md-12">
        <!-- DATA TABLE -->
        <h3 class="title-5 m-b-35">Hakkımızda Söz İşlemleri</h3>
        <small style="color:darkred;">*Bir tane olmasına özen gösterin aksi takdirde hakkımızda kısmı düzgün görünmeyecektir.</small>
        <br /><br />
        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Söz</th>
                        <th>Sözün SAHİBİ</th>
                        <th>MESLEĞİ</th>
                        <th>GÖRSELİ</th>
                        <th>Ana GÖRSEL</th>
                        <th>Durum</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        sayaç++;
                        <tr class="tr-shadow">
                            <td style="color:darkred;">@sayaç</td>
                            <td class="desc">@item.Quote</td>
                            <td class="desc">@item.TestimonialName</td>
                            <td class="desc">@item.TestimonialJob</td>
                            <td><img src="@item.TestimonialImageUrl" /></td>
                            <td><img src="@item.TestimonialImageUrl2" /></td>
                            <td>
                                @if (item.Status == true)
                                {
                                    <span style="height:200px;" class="status--process"><a href="/Admin/Testimonial/DoPassiveTestimonial/@item.ID" class="btn btn-danger">Pasif Yap</a></span>
                                }
                                else
                                {
                                    <span style="height:200px;" class="status--process"><a href="/Admin/Testimonial/DoActiveTestimonial/@item.ID" class="btn btn-success">Aktif Yap</a></span>
                                }
                            </td>
                            <td>
                                <div class="table-data-feature">

                                    <a class="btn btn-dark" href="/Admin/Testimonial/UpdateTestimonial/@item.ID" style="margin-right:5px;" data-toggle="tooltip" data-placement="top" title="Edit">
                                        <i class="zmdi zmdi-edit"></i>
                                    </a>
                                    <a class="btn btn-dark" href="/Admin/Testimonial/DeleteTestimonial/@item.ID" data-toggle="tooltip" data-placement="top" title="Delete">
                                        <i class="zmdi zmdi-delete"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <tr class="spacer"></tr>
                    }


                </tbody>
            </table>
        </div>
        <!-- END DATA TABLE -->

        <br /><br />
        <div class="table-data__tool">
            <div class="table-data__tool-right">
                <a href="/Admin/Testimonial/AddTestimonial/" class="au-btn au-btn-icon au-btn--green au-btn--small">
                    <i class="zmdi zmdi-plus"></i>Hakkımızda Söz Ekle
                </a>
            </div>
        </div>
    </div>
</div>

