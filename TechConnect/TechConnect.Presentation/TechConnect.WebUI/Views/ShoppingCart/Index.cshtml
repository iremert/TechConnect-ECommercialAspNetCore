
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/_Layout.cshtml";
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Sipariş Sepeti</h4>
                    <div class="breadcrumb__links">
                        <a href="./index.html">Anasayfa</a>
                        <span>Sipariş Sepeti</span>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Shopping Cart Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Ürün</th>
                                <th>MİKTAR</th>
                                <th>FİYAT</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="product__cart__item">
                                    <div class="product__cart__item__pic">
                                        <img src="~/tech/img/shopping-cart/cart-1.jpg" alt="">
                                    </div>
                                    <div class="product__cart__item__text">
                                        <h6>T-shirt Contrast Pocket</h6>
                                        <h5>$98.49</h5>
                                    </div>
                                </td>
                                <td class="quantity__item">
                                    <div class="quantity">
                                        <div class="pro-qty-2">
                                            <input type="text" value="1">
                                        </div>
                                    </div>
                                </td>
                                <td class="cart__price">$ 30.00</td>
                                <td class="cart__close"><i class="fa fa-close"></i></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn">
                            <a href="/ürünler/">ALIŞVERİŞE Devam Et</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="cart__discount">
                    <h6>İNDİRİM Kuponu</h6>
                    <form action="#">
                        <input type="text" placeholder="Kupon Kodu">
                        <button type="submit">Uygula</button>
                    </form>
                </div>
                <div class="cart__total">
                    <h6>Toplam FİYAT</h6>
                    <ul>
                        <li>Subtotal <span>$ 169.50</span></li>
                        <li>Total <span>$ 169.50</span></li>
                    </ul>

                   <hr />
                    <div class="checkout__input__checkbox">
                        <label for="acc">
                            Giriş Yapmadın mı?
                            <input type="checkbox" id="acc">
                            <span class="checkmark"></span>
                        </label>
                        <p>
                            Bir hesabınız yoksa lütfen bir hesap oluşturun,başka bir hesaba geçmek istiyorsanız geçiniz, hesabınız var ve giriş yapmadıysanız lütfen giriş yapınız !
                        </p>
                    </div>


                    <a href="/sipariş-sepeti/adres-işlemleri/" class="primary-btn">Sepetİ Onayla</a>
                </div>

            </div>
        </div>
    </div>
</section>
<!-- Shopping Cart Section End -->
