}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Sipariş Sepeti</h4>
                    <div class="breadcrumb__links">
                        <a href="./index.html">Anasayfa</a>
                        <span>Sipariş Sepeti</span>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shopping Cart Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Ürün</th>
                                <th>MİKTAR</th>
                                <th>FİYAT</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <br />
                                <table>
                                    <h4 style="color:red;font-family:'Times New Roman', Times, serif;">Sepetinize herhangi bir ekleme yapmadınız ...</h4>
                                </table>
                               
                            </tr>


                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn">
                            <a href="/ürünler/">ALIŞVERİŞE Devam Et</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="cart__discount">
                    <h6>İNDİRİM Kuponu</h6>
                    <i style="color:red;margin-top:2px;font-size:15px;">&#8505; Sepetiniz boşken indirim kuponu ekleyemezsiniz...</i>
                    <form action="#">
                        <input type="text" placeholder="Kupon Kodu">
                        <button type="submit">Uygula</button>
                    </form>
                </div>
                <div class="cart__total">
                    <h6>Toplam FİYAT</h6>
                    <ul>
                        <li>Toplam Fiyat <span>0 ₺</span></li>
                        <li>İndirim Oranı <span> % 0 </span></li>
                        <li>Kargo Ücreti <span> 100 ₺ </span></li>
                        <li>İndirimli Fiyat<span>0 ₺</span></li>
                    </ul>

                    <i style="color:red;margin-top:2px;font-size:13px;">&#8505; Sepetiniz boşken sepeti onaylayamazsınız...</i>
                    <a href="" class="primary-btn">Sepetİ Onayla</a>
                </div>

            </div>
        </div>
    </div>
</section>
<!-- Shopping Cart Section End -->
