@{
    ViewData["Title"] = "Index2";
    Layout = "~/Views/Layout/_Layout.cshtml";
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Adres İşlemleri</h4>
                    <div class="breadcrumb__links">
                        <a href="./index.html">Anasayfa</a>
                        <span>Sipariş Sepeti ></span>
                        <span>Adres İşlemleri</span>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <form action="#">
                <div class="row">
                    <div class="col-lg-7 col-md-6">
                        <div class="row">
                            <h6 class="checkout__title">Adres İşlemlerİ</h6>
                        </div>
                        
                        <p><i style="font-size:14px;">&#8505;  Önceden eklediğiniz adresleriniz var ise birini seçebilir yada düzenleyebilirsiniz aksi durumda ekleme yapabilirsiniz ...</i></p>
                        <div class="row" style="display:flex;">
                            <button type="submit" class="site-btn">Yarımca<span>(Hacı Osman Mahallesi/Körfez/Kocaeli...)</span></button>
                            <a style="margin:15px;color:red;height:50px;width:50px; "><i>&#9998;</i></a>
                        </div>
                        <br />
                        <div class="row" style="display:flex;">
                            <button type="submit" class="site-btn">İlkadım<span>(Denizevler Caddesi/İlkadım/Samsun ...)</span></button>
                            <a style="margin:15px;color:red;height:50px;width:50px;"><i>&#9998;</i></a>
                        </div>


                    </div>
                    <div class="col-lg-5 col-md-12">
                        <div class="checkout__order">
                            <h4 class="order__title">Adres Ekle</h4>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p >Adınız<span>*</span></p>
                                        <input style="height:40px;" type="text">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Soyadınız<span>*</span></p>
                                        <input style="height:40px;" type="text">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Emailiniz<span>*</span></p>
                                        <input style="height:40px;" type="email">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Numaranız<span>*</span></p>
                                        <input style="height:40px;" type="tel">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>İl<span>*</span></p>
                                        <input style="height:40px;" type="text">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>İlçe<span>*</span></p>
                                        <input style="height:40px;" type="text">
                                    </div>
                                </div>
                            </div>
                            <div class="checkout__input">
                                <p>Mahalle<span>*</span></p>
                                <input style="height:40px;" type="text">
                            </div>

                            <div class="checkout__input">
                                <p>Adres<span>*</span></p>
                                <input style="height:70px;" type="text" placeholder=".. Mahallesi .. Sokak .. No .. Kat .." class="checkout__input__add">
                            </div>
                            <div class="checkout__input">
                                <p>Adres Başlığı<span>*</span></p>
                                <input style="height:40px;" type="text">
                            </div>
                            <div class="checkout__input">
                                <p>Posta Kodu<span>*</span></p>
                                <input style="height:40px;" type="text">
                            </div>
                            <button type="submit" class="site-btn">Adres Ekle</span></button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->
