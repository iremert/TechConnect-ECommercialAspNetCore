@model List<TechConnect.DtoUI.OrderingDtos.ResultOrderingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/_Layout.cshtml";
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Siparişlerim</h4>
                    <div class="breadcrumb__links">
                        <a href="./index.html">Anasayfa</a>
                        <span>Siparişlerim</span>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>SİPARİŞ Id </th>
                                <th>SİPARİŞ TARİHİ</th>
                                <th >SİPARİŞ TESLİM TARİHİ</th>
                                <th>Toplam Tutar (₺)</th>
                                <th>SİPARİŞ Durumu</th>
                                <th>SİPARİŞ Detayı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="cart__price" style="padding-right:20px;">@item.ID </td>
                                    <td class="cart__price" style="min-width:150px;">@item.OrderDate.ToShortDateString()</td>
                                    @if(!(item.OrderState.ToString()=="Tamamlandı"))
                                    {
                                        <td class="cart__price" style="min-width:220px;">......</td>
                                    }
                                    else
                                    {
                                        <td class="cart__price" style="min-width:220px;">@item.OrderDeliveryDate.ToShortDateString()</td>
                                    }
                                    <td class="cart__price" style="min-width:180px;">@item.BasketTotal.TotalPrice</td>
                                    <td class="cart__price" style="min-width:160px;"> <button class="add-cart" style="background-color:yellow;border-radius:10px;font-size:15px;">@item.OrderState</button></td>
                                    <td class="cart__price"> <a href="/siparişlerim/sipariş-detaylarım/@item.UserId" class="btn btn-dark" class="add-cart" style="font-size: 15px;color: white;font-weight: 700;-webkit-transition: all, 0.3s;-o-transition: all, 0.3s;transition: all, 0.3s;">Sipariş Detayı</a></td>
                                   
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
