
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Male_Fashion Template">
    <meta name="keywords" content="Male_Fashion, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>TechConnect</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&display=swap"
    rel="stylesheet">


    <link rel="icon" sizes="50x50" href="~/tech/img/techconnect3.png"  type="image/x-icon">

    <!-- Css Styles -->
    <link rel="stylesheet" href="~/tech/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/tech/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/tech/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/tech/css/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="~/tech/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/tech/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/tech/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/tech/css/style.css" type="text/css">
</head>

<body>

    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Offcanvas Menu Begin -->
    <div class="offcanvas-menu-overlay"></div>
    <div class="offcanvas-menu-wrapper">
        <div class="offcanvas__option">
            <div class="offcanvas__links">
                <a href="#">Giriş Yap</a>
                <a href="#">Kayıt Ol</a>
            </div>
            <div class="offcanvas__top__hover">
                <span>TR <i class="arrow_carrot-down"></i></span>
                <ul>
                    <li>TR</li>
                    <li>EUR</li>
                    <li>USD</li>
                </ul>
            </div>
        </div>
        <div class="offcanvas__nav__option">
            <a href="#" class="search-switch"><img src="~/tech/img/icon/search.png" alt=""></a>
            <a href="#"><img src="~/tech/img/icon/heart.png" alt=""></a>
            <a href="#"><img src="~/tech/img/icon/cart.png" alt=""> <span>0</span></a>
            <div class="price">$0.00</div>
        </div>
        <div id="mobile-menu-wrap"></div>
        <div class="offcanvas__text">
            <p>Ücretsiz kargo, 30 gün içinde iade veya para iadesi garantisi.</p>
        </div>
    </div>
    <!-- Offcanvas Menu End -->

    <!-- Header Section Begin -->
    <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-7">
                        <div class="header__top__left">
                            <p>Ücretsiz kargo, 30 gün içinde iade veya para iadesi garantisi.</p>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-5">
                        <div class="header__top__right">
                            <div class="header__top__links">
                                 <a href="/giriş-yap/">Giriş Yap</a>
                                 <a href="/kayıt-ol/">Kayıt Ol</a>
                            </div>
                            <div class="header__top__hover">
                                <span>TR <i class="arrow_carrot-down"></i></span>
                                <ul>
                                    <li>TR</li>
                                    <li>EUR</li>
                                    <li>USD</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    <div class="header__logo">
                        <a href="./index.html"><img src="~/tech/img/techconnect.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <nav class="header__menu mobile-menu">
                        <ul>
                            <li><a href="~/tech/index.html">Anasayfa</a></li>
                            <li><a href="/hakkımızda/">Hakkımızda</a></li>
                            <li><a href="/ürünler/">Ürünler</a></li>
                            <li><a href="/iletişim/">İletişim</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3 col-md-3">
                    <div class="header__nav__option">
                        <a href="#" class="search-switch"><img src="~/tech/img/icon/search.png" alt=""></a>
                        <a href="/favoriler/"><img src="~/tech/img/icon/heart.png" alt=""></a>
                        <a href="/karşılaştır/"><img src="~/tech/img/icon/compare.png" alt=""></a>
                        <a href="/sipariş-sepeti/"><img src="~/tech/img/icon/cart.png" alt=""> <span>0</span></a>
                        <div class="price">0.00 ₺</div>
                    </div>
                </div>
            </div>
            <div class="canvas__open"><i class="fa fa-bars"></i></div>
        </div>
    </header>
    <!-- Header Section End -->

   @RenderBody()

    <!-- Footer Section Begin -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="footer__about">
                        <div class="footer__logo">
                            <a href="#"><img src="~/tech/img/techconnect2.png" alt=""></a>
                        </div>
                        <p>İş modelimizin merkezinde müşteri memnuniyeti bulunur. Ürün tasarımımız, ihtiyaçlarınıza en iyi şekilde cevap verecek şekilde özel olarak hazırlanmıştır.</p>
                        <a href="#"><img src="~/tech/img/payment.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-2 offset-lg-1 col-md-3 col-sm-6">
                    <div class="footer__widget">
                        <h6>Shopping</h6>
                        <ul>
                            <li><a href="#">Clothing Store</a></li>
                            <li><a href="#">Trending Shoes</a></li>
                            <li><a href="#">Accessories</a></li>
                            <li><a href="#">Sale</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6">
                    <div class="footer__widget">
                        <h6>Shopping</h6>
                        <ul>
                            <li><a href="#">Contact Us</a></li>
                            <li><a href="#">Payment Methods</a></li>
                            <li><a href="#">Delivary</a></li>
                            <li><a href="#">Return & Exchanges</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 offset-lg-1 col-md-6 col-sm-6">
                    <div class="footer__widget">
                        <h6>Haber Bülteni</h6>
                        <div class="footer__newslatter">
                            <p>Güncel ürünler, indirimler, kampanyalar ve daha fazlası hakkında bilgi almak için bültenimize abone ol!</p>
                            <form action="#">
                                <input type="text" placeholder="Emailiniz...">
                                <button type="submit"><span class="icon_mail_alt"></span></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="footer__copyright__text">
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        <p>Copyright ©
                            <script>
                                document.write(new Date().getFullYear());
                            </script>
                            Tüm hakları bize aittir. <i class="fa fa-heart-o"
                            aria-hidden="true"></i><a href="https://colorlib.com" target="_blank"> İrem Ertürk </a> tarafından tasarlanmıştır.
                        </p>
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Section End -->
    <!-- Search Begin -->
    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch">+</div>
            @await Component.InvokeAsync("_SearchInputComponentPartial")
        </div>
    </div>
 
    <!-- Search End -->

    <!-- Js Plugins -->
    <script src="~/tech/js/jquery-3.3.1.min.js"></script>
    <script src="~/tech/js/bootstrap.min.js"></script>
    <script src="~/tech/js/jquery.nice-select.min.js"></script>
    <script src="~/tech/js/jquery.nicescroll.min.js"></script>
    <script src="~/tech/js/jquery.magnific-popup.min.js"></script>
    <script src="~/tech/js/jquery.countdown.min.js"></script>
    <script src="~/tech/js/jquery.slicknav.js"></script>
    <script src="~/tech/js/mixitup.min.js"></script>
    <script src="~/tech/js/owl.carousel.min.js"></script>
    <script src="~/tech/js/main.js"></script>
</body>

</html>