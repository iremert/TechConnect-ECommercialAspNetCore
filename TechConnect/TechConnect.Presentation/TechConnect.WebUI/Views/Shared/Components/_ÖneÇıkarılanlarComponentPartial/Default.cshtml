@model List<TechConnect.DtoUI.ProductDto.ResultProductDto>
@{
    int sayaç = 0;
}
<!-- Banner Section Begin -->
<section class="banner spad">
    <div class="container">
        <div class="row">
            @foreach(var item in Model)
            {
                sayaç++;
                @if(sayaç==1)
                {
                    <div class="col-lg-7 offset-lg-4">
                        <div class="banner__item">
                            <div class="banner__item__pic">
                                <img src="@item.ProductImageUrl" style="height:400px;width:400px;" alt="">
                            </div>
                            <div class="banner__item__text">
                                <h2>Teknoloji Koleksiyonu</h2>
                                <a href="/ürünler/ürün-detay/@item.ID">Şimdi Satın Al</a>
                            </div>
                        </div>
                    </div>
                }
                @if (sayaç == 2)
                {
                    <div class="col-lg-5">
                        <div class="banner__item banner__item--middle">
                            <div class="banner__item__pic">
                                <img src="@item.ProductImageUrl" style="height:500px;width:500px;" alt="">
                            </div>
                            <div class="banner__item__text">
                                <h2>Teknoloji Koleksiyonu</h2>
                                <a href="/ürünler/ürün-detay/@item.ID">Şimdi Satın Al</a>
                            </div>
                        </div>
                    </div>
                }
                @if (sayaç == 3)
                {
                    <div class="col-lg-7">
                        <div class="banner__item banner__item--last">
                            <div class="banner__item__pic">
                                <img src="@item.ProductImageUrl" style="height:500px;width:500px;" alt="">
                            </div>
                            <div class="banner__item__text">
                                <h2>Teknoloji Koleksiyonu</h2>
                                <a href="/ürünler/ürün-detay/@item.ID">Şimdi Satın Al</a>
                            </div>
                        </div>
                    </div>
                }
                
            }
           
           
        </div>
    </div>
</section>
<!-- Banner Section End -->
