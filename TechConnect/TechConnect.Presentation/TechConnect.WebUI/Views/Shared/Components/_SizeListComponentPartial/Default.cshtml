@model List<TechConnect.DtoUI.CategoryDtos.ResultCategoryDto>


<div class="card">
    <div class="card-heading">
        <a data-toggle="collapse" data-target="#collapseFour">Boyut</a>
    </div>
    <div id="collapseFour" class="collapse show" data-parent="#accordionExample">
        <div class="card-body">
            <div class="shop__sidebar__size">
                @foreach(var item in Model)
                {
                    <p>@item.Name</p>
                    @foreach(var x in item.Size)
                    {
                        <label style="width:109px;font-size:11px;" for="xs">
                            <a href="/ürünler/size/@x" style="color:dimgray;">@x</a>
                            <input type="radio"  id="xs">
                        </label>
                    }
                    <br />
                }
                
            </div>
        </div>
    </div>
</div>